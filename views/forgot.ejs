<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .container{
            margin: 100px 10px 15px 500px;
            width: fit-content;
            border: 1px solid rgb(255, 255, 255,0.5);
            padding: 20px;
            border-radius: 20px;
            height: 170px;
        }
        input{
            width: 220px;
            height: 30px;
            border-radius: 10px;
            border: 1px solid  rgb(15, 14, 33);
            background-color: rgb(45, 45, 50);
            color: white;
            text-align: center;
            font-size: 15px;
        }
        body{
            background-color: rgb(15, 14, 33);
        }
        .forgot{
            background-color: aquamarine;
            border: 1px solid aquamarine;
            color: rgb(49, 49, 57);
        }
        td{
            padding: 10px;
        }
        table{
            margin: auto;
            
        }
        .login:hover{
            background-color: green;
        }
        #error{
        color: red;
        font-size: 12px;
        margin-left: 20px;
      }
      #link{
        color: white;
        text-align: center;
        text-decoration: none;
      }
        
    </style>
</head>
<body>
    <form  id="forgotForm">
        <h2 style="text-align: center; color: aliceblue;">Ashutoshsingh Tomar DEV089</h2>
        <div class="container">
            <table>
                <tr>
                    <td><input type="text" id="forgotmail" name="forgotmail" placeholder="Enter your email"></td>
                </tr>
                <tr>
                    <td><input type="button"  class="forgot" value="Submit" onclick="handleForgot()"></td>
                </tr>
            </table>
            <div class="passE">
                <span id="error"></span>
            </div>
        </div>
        
    </form>
    <div id="link"></div>
   

    <script>
        async function  handleForgot()
        {
                       let forgotmail = document.getElementById('forgotmail');

                            let formdata = document.getElementById('forgotForm')
                            const details = new FormData(formdata);
                            const params = new URLSearchParams(details);
                            const forgotdata = await new Response(params).text();

                            let data = await fetch("http://localhost:5900/forgot", {

                                method: "POST",
                                headers: {
                                    "Content-type": 'application/x-www-form-urlencoded'
                                },
                                body: forgotdata
                            })
                            let final = await data.json();
                            console.log(final);
                            document.getElementById('link').innerHTML = `<a href='${final.msg}' > ${final.msg} </a>`
                    
        }
    </script>
</body>
</html>